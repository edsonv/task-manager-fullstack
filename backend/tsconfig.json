{
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": ["ESNext"],
    "module": "ESNext",
    "moduleDetection": "force",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDirs": ["src"],
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ESNext",
    "types": ["node"],
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts", "environment.d.ts"],
  "exclude": ["node_modules"]
}
